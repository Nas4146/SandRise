---
import BaseLayout from '@layouts/BaseLayout.astro';

const description = 'Contact SandRise and Nick Sanders for product partnerships. Share your project details or request the latest resume.';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'Business',
    email: 'hello@sandrise.studio'
  }
};
---
<BaseLayout title="Contact — SandRise" description={description} structuredData={structuredData}>
  <section class="page-hero">
    <div class="container">
      <span class="badge">Let’s talk</span>
      <h1>Tell me about your product</h1>
      <p class="lead">
        Share a bit about what you’re building and the momentum you’d like to create. I’ll respond within two business days.
      </p>
    </div>
  </section>

  <section class="section-alt">
    <div class="container contact-grid">
      <div class="card">
        <h2>Start a project</h2>
        <form class="contact-form" name="sandrise-contact" method="post" data-netlify="true" netlify-honeypot="bot-field">
          <input type="hidden" name="form-name" value="sandrise-contact" />
          <p class="sr-only">
            <label>
              Don’t fill this out if you’re human: <input name="bot-field" />
            </label>
          </p>
          <label>
            Name
            <input type="text" name="name" required autocomplete="name" />
          </label>
          <label>
            Email
            <input type="email" name="email" required autocomplete="email" />
          </label>
          <label>
            Company or product
            <input type="text" name="company" autocomplete="organization" />
          </label>
          <label>
            What are you hoping to build or unlock?
            <textarea name="message" required rows={6}></textarea>
          </label>
          <label>
            Timeline
            <select name="timeline">
              <option value="">Select</option>
              <option value="0-3 months">0–3 months</option>
              <option value="3-6 months">3–6 months</option>
              <option value="6+ months">6+ months</option>
            </select>
          </label>
          <button type="submit">Send message</button>
        </form>
      </div>
      <aside class="card contact-info">
        <h2>Prefer email?</h2>
        <p>
          Reach me directly at <a href="mailto:hello@sandrise.studio">hello@sandrise.studio</a> or grab time through the calendar link below.
        </p>
        <div class="info-block">
          <h3>Availability</h3>
          <p>Accepting new partnerships for Q4 2025.</p>
        </div>
        <div class="info-block">
          <h3>Download resume</h3>
          <a class="button secondary" href="/resume.pdf" target="_blank" rel="noopener">Download PDF</a>
        </div>
        <div class="info-block">
          <h3>Calendly</h3>
          <a class="text-link" href="https://cal.com/nicksanders" target="_blank" rel="noopener">Book intro call</a>
        </div>
      </aside>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    padding-top: calc(var(--space-4xl) + var(--nav-height));
    padding-bottom: var(--space-2xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    gap: var(--space-3xl);
  }

  .contact-form {
    display: grid;
    gap: var(--space-md);
  }

  label {
    display: grid;
    gap: var(--space-2xs);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  input,
  textarea,
  select {
    font: inherit;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    transition: border var(--duration-sm) var(--ease-standard),
      box-shadow var(--duration-sm) var(--ease-standard);
  }

  input:focus-visible,
  textarea:focus-visible,
  select:focus-visible {
    outline: none;
    border-color: rgba(12, 122, 227, 0.55);
    box-shadow: var(--shadow-outline);
  }

  textarea {
    resize: vertical;
  }

  .contact-grid > .card:first-child {
    grid-column: span 7;
  }

  .contact-info {
    grid-column: span 5;
    display: grid;
    gap: var(--space-lg);
  }

  .info-block {
    display: grid;
    gap: var(--space-3xs);
  }

  @media (max-width: 960px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-grid > .card:first-child,
    .contact-info {
      grid-column: span 1;
    }
  }
</style>
