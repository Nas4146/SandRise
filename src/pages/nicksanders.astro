<script>
  // Scroll-triggered animations using Intersection Observer
  document.addEventListener('DOMContentLoaded', () => {
    // Check if user prefers reduced motion
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (prefersReducedMotion) {
      return; // Exit early if reduced motion is preferred
    }

    // Create intersection observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Add animate class to trigger the animation
          entry.target.classList.add('animate');
          
          // Handle staggered animations for children
          const children = entry.target.querySelectorAll('.scroll-scale-in, .scroll-slide-in');
          children.forEach((child, index) => {
            setTimeout(() => {
              child.classList.add('animate');
            }, index * 100); // 100ms stagger delay
          });
          
          // Stop observing once animated
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe all elements with scroll animation classes
    const scrollElements = document.querySelectorAll(
      '.scroll-fade-up, .scroll-fade-left, .scroll-fade-right, .scroll-scale-in, .scroll-slide-in'
    );

    scrollElements.forEach((el) => {
      observer.observe(el);
    });

    // Special handling for project tiles and interest cards
    const projectTiles = document.querySelectorAll('.project-tile');
    const interestCards = document.querySelectorAll('.interest-card');

    // Observe project tiles individually for staggered animation
    projectTiles.forEach((tile) => {
      observer.observe(tile);
    });

    // Observe interest cards individually for staggered animation  
    interestCards.forEach((card) => {
      observer.observe(card);
    });
  });
</script>

