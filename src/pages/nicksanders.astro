import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

const allProjects = (await getCollection('projects')).filter((project) => !project.data.draft);

// Define custom project order
const projectOrder: string[] = [
  'flexex',
  'izzocam',
  'grooptroop',
  'windy',
  'devtalk',
  'ring',
  'commander',
  'coffee-scroll',
  'techflow-monitoring' // topdown game
];

// Sort projects by custom order
const projects: CollectionEntry<'projects'>[] = allProjects.sort((a, b) => {
  const indexA = projectOrder.indexOf(a.slug);
  const indexB = projectOrder.indexOf(b.slug);
  
  // If both are in the custom order, sort by that order
  if (indexA !== -1 && indexB !== -1) {
    return indexA - indexB;
  }
  
  // If only one is in the custom order, prioritize it
  if (indexA !== -1) return -1;
  if (indexB !== -1) return 1;
  
  // If neither is in the custom order, sort alphabetically
  return a.data.title.localeCompare(b.data.title);
});

const rasterRegex = /\.(png|jpe?g)$/i;

const interests = [
  'Building with AI agents',
  'Strength training & fitness',
  'Coffee brewing (and roasting)',
  'Horror films & dark storytelling',
  'Trail running in the hills',
  'Product systems & operations'
