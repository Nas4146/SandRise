---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const published = posts.filter((post) => !post.data.draft).sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());

const description = 'Insights on product strategy, discovery, and building momentum from Nick Sanders and SandRise.';
---
<BaseLayout title="Insights — SandRise" description={description}>
  <section class="page-hero">
    <div class="container">
      <span class="badge">Insights</span>
      <h1>Notes from the product trenches</h1>
      <p class="lead">
        Essays, frameworks, and learnings from building and scaling products with founders and product teams.
      </p>
    </div>
  </section>

  <section class="section-alt">
    <div class="container">
      {published.length === 0 ? (
        <div class="empty">
          <h2>Posts coming soon</h2>
          <p class="muted">Be first to know when new essays drop—subscribe below.</p>
          <form class="newsletter" name="sandrise-newsletter" method="post" data-netlify="true">
            <input type="hidden" name="form-name" value="sandrise-newsletter" />
            <label>
              <span class="sr-only">Email</span>
              <input type="email" name="email" placeholder="you@example.com" required />
            </label>
            <button type="submit">Notify me</button>
          </form>
        </div>
      ) : (
        <div class="grid posts">
          {published.map((post) => (
            <article class="card">
              <span class="badge">{post.data.tags?.[0] ?? 'Article'}</span>
              <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
              <p>{post.data.description}</p>
              <div class="post-meta">
                <span>{post.data.publishedAt.toLocaleDateString()}</span>
                {post.data.readingTime && <span>{post.data.readingTime}</span>}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    padding-top: calc(var(--space-4xl) + var(--nav-height));
    padding-bottom: var(--space-2xl);
  }

  .empty {
    text-align: center;
    display: grid;
    gap: var(--space-md);
    justify-items: center;
    padding: var(--space-3xl) var(--space-2xl);
    background: var(--color-surface);
    border-radius: var(--radius-md);
    border: 1px solid rgba(17, 17, 17, 0.04);
    box-shadow: var(--shadow-soft);
  }

  .newsletter {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .newsletter input {
    min-width: 220px;
  }

  .posts {
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-2xl);
  }

  .post-meta {
    display: inline-flex;
    gap: var(--space-sm);
    color: var(--color-text-tertiary);
    font-size: var(--font-size-xs);
  }
</style>
