---
import BaseLayout from '@layouts/BaseLayout.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'SandRise',
  url: 'https://sandrise.io',
  description: 'Building digital products that validate quickly and scale responsibly.'
};
---
<BaseLayout
  title="SandRise"
  description="Building digital products that validate quickly and scale responsibly."
  structuredData={structuredData}
  hideFooter={true}
>
  <div class="sandrise-home">
    <h1 class="sandrise-logo">sandrise.io</h1>
  </div>
</BaseLayout>

<style>
  .sandrise-home {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-lg);
  }

  .sandrise-logo {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    margin: 0;
    text-align: center;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sandrise-logo {
      animation: none;
    }
  }
</style>
