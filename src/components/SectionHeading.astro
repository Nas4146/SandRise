---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { eyebrow, title, description, align = 'left' } = Astro.props as Props;
---
<div class:list={['section-heading', align === 'center' && 'centered']}>
  {eyebrow && <span>{eyebrow}</span>}
  <h2>{title}</h2>
  {description && <p class="lead">{description}</p>}
</div>

<style>
  .section-heading.centered {
    align-items: center;
    text-align: center;
  }

  .section-heading.centered p {
    max-width: 60ch;
  }
</style>
