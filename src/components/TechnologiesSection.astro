---

<section class={`technologies-section ${className}`}>
  <div class="container">
    <SectionHeading
      eyebrow="Tech Stack"
      title="Technologies & Tools"
      description="Platforms, languages, and tools across product development, analytics, and delivery."
    />
    
    <div class="tech-categories">
      {techCategories.map((category) => (
        <div class="tech-category">
          <h3 class="category-title">{category.title}</h3>
          <div class="tech-grid">
            {category.technologies.map((tech) => (
              <div 
                class="tech-item"
                title={tech.name}
                style={`--tech-color: ${tech.color}`}
              >
                <div class="tech-logo-wrapper">
                  <img
                    src={tech.logo}
                    alt={`${tech.name} logo`}
                    loading="lazy"
                    decoding="async"
                    class="tech-logo"
                  />
                </div>
                <span class="tech-name">{tech.name}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .technologies-section {
    padding: var(--space-xl) 0 var(--space-2xl);
    background: var(--color-surface);
  }

  .tech-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-lg);
  }

  .tech-category {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .category-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin: 0;
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: var(--space-xs);
  }

  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 
      0 8px 16px rgba(17, 34, 21, 0.08),
      0 2px 4px rgba(17, 34, 21, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: default;
    position: relative;
    overflow: hidden;
  }

  .tech-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.6) 50%,
      transparent 100%
    );
    opacity: 0.5;
  }

  .tech-item:hover {
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--tech-color) 40%, rgba(255, 255, 255, 0.5) 60%);
    background: rgba(255, 255, 255, 0.75);
    box-shadow: 
      0 12px 24px rgba(17, 34, 21, 0.12),
      0 4px 8px rgba(17, 34, 21, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  .tech-logo-wrapper {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tech-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
    transition: transform 0.2s ease;
  }

  .tech-item:hover .tech-logo {
    transform: scale(1.05);
  }

  .tech-name {
    font-size: 0.65rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-align: center;
    line-height: 1.2;
  }

  @media (prefers-color-scheme: dark) {
    .tech-item {
      background: rgba(17, 34, 21, 0.4);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .tech-item:hover {
      background: rgba(17, 34, 21, 0.5);
      box-shadow: 
        0 8px 16px rgba(0, 0, 0, 0.3),
        0 2px 4px rgba(0, 0, 0, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
  }

  @media (min-width: 640px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
    }

    .tech-logo-wrapper {
      width: 36px;
      height: 36px;
    }

    .tech-name {
      font-size: 0.7rem;
    }
  }

  @media (min-width: 1024px) {
    .tech-categories {
      grid-template-columns: repeat(2, 1fr);
    }

    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(95px, 1fr));
      gap: var(--space-sm);
    }

    .tech-item {
      padding: var(--space-sm);
    }

    .tech-logo-wrapper {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 900px) {
    .tech-categories {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 520px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(75px, 1fr));
    }

    .tech-logo-wrapper {
      width: 28px;
      height: 28px;
    }

    .tech-name {
      font-size: 0.6rem;
    }
  }
</style>
