---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

const organizations = [
  {
    name: 'Broadcom',
    shortName: 'BROADCOM',
    brandColor: '#CA0404', // Broadcom Red
    type: 'company'
  },
  {
    name: 'VMware',
    shortName: 'VMware',
    brandColor: '#0091DA', // VMware Blue
    type: 'company'
  },
  {
    name: 'AWS',
    shortName: 'aws',
    brandColor: '#FF9900', // AWS Orange
    type: 'company'
  },
  {
    name: 'Fannie Mae',
    shortName: 'FNMA',
    brandColor: '#005DAA', // Fannie Mae Blue
    type: 'company'
  },
  {
    name: 'UT Austin McCombs',
    shortName: 'McCombs',
    brandColor: '#BF5700', // UT Burnt Orange
    type: 'education'
  }
];
---

<div class={`trusted-by ${className}`}>
  <div class="trusted-logos">
    {organizations.map((org) => (
      <div 
        class="trusted-logo" 
        title={org.name}
        style={`--brand-color: ${org.brandColor}`}
        data-org={org.type}
      >
        <span class="logo-text" aria-label={org.name}>{org.shortName}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .trusted-by {
    text-align: center;
    margin-top: var(--space-xl);
  }

  .trusted-by-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
    margin: 0 0 var(--space-md) 0;
  }

  .trusted-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
    margin-top: var(--space-sm);
  }

  .trusted-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    height: 44px;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    background-color: color-mix(in srgb, var(--brand-color) 8%, transparent 92%);
    border: 1px solid color-mix(in srgb, var(--brand-color) 20%, transparent 80%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .trusted-logo::before {
    display: none;
  }

  .trusted-logo:hover {
    transform: translateY(-3px);
    background-color: color-mix(in srgb, var(--brand-color) 12%, transparent 88%);
    border-color: color-mix(in srgb, var(--brand-color) 30%, transparent 70%);
    box-shadow: 
      0 8px 25px color-mix(in srgb, var(--brand-color) 15%, transparent 85%),
      0 4px 12px color-mix(in srgb, var(--brand-color) 10%, transparent 90%);
  }

  .logo-text {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    color: var(--brand-color);
    letter-spacing: 0.02em;
    position: relative;
    z-index: 1;
    text-shadow: 0 1px 2px color-mix(in srgb, var(--brand-color) 20%, transparent 80%);
    transition: all 0.3s ease;
  }

  .trusted-logo:hover .logo-text {
    color: color-mix(in srgb, var(--brand-color) 90%, #000 10%);
    transform: scale(1.05);
  }

  /* Organization-specific styling */
  .trusted-logo[data-org="education"] {
    background-color: color-mix(in srgb, var(--brand-color) 10%, transparent 90%);
  }

  .trusted-logo[data-org="education"] .logo-text {
    font-style: italic;
    letter-spacing: 0.01em;
  }

  @media (prefers-color-scheme: dark) {
    .trusted-logo {
      background-color: color-mix(in srgb, var(--brand-color) 12%, transparent 88%);
    }
    
    .trusted-logo:hover {
      box-shadow: 
        0 8px 25px color-mix(in srgb, var(--brand-color) 20%, transparent 80%),
        0 4px 12px color-mix(in srgb, var(--brand-color) 15%, transparent 85%);
    }
  }

  @media (max-width: 768px) {
    .trusted-logos {
      gap: var(--space-md);
    }
    
    .trusted-logo {
      min-width: 70px;
      height: 38px;
      padding: var(--space-2xs) var(--space-xs);
    }
    
    .logo-text {
      font-size: 0.65rem;
    }
  }

  @media (max-width: 520px) {
    .trusted-logos {
      gap: var(--space-sm);
    }
    
    .trusted-logo {
      min-width: 60px;
      height: 34px;
      padding: var(--space-3xs) var(--space-2xs);
    }
    
    .logo-text {
      font-size: 0.6rem;
    }
  }
</style>