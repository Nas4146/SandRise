---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

const organizations = [
  {
    name: 'Broadcom',
    shortName: 'BROADCOM',
    brandColor: '#CA0404', // Broadcom Red
    type: 'company',
    logo: '/images/logos/Broadcom_Logo_Red-Black_no-tag.png',
    title: 'Senior Product Manager',
    years: '2023 - Present',
    highlights: [
      'Led product strategy for cloud platform',
      'Drove 40% increase in user adoption',
      'Managed cross-functional team of 12'
    ]
  },
  {
    name: 'VMware',
    shortName: 'VMware',
    brandColor: '#0091DA', // VMware Blue
    type: 'company',
    logo: '/images/logos/vmware.png',
    title: 'Product Manager',
    years: '2021 - 2023',
    highlights: [
      'Shipped 3 major product releases',
      'Improved developer experience metrics by 35%',
      'Established product analytics framework'
    ]
  },
  {
    name: 'AWS',
    shortName: 'aws',
    brandColor: '#FF9900', // AWS Orange
    type: 'company',
    logo: '/images/logos/aws.png',
    title: 'Associate Product Manager',
    years: '2019 - 2021',
    highlights: [
      'Contributed to AWS Developer Tools roadmap',
      'Managed beta program with 500+ customers',
      'Reduced onboarding time by 50%'
    ]
  },
  {
    name: 'Fannie Mae',
    shortName: 'FNMA',
    brandColor: '#005DAA', // Fannie Mae Blue
    type: 'company',
    logo: '/images/logos/fannie-mae.png',
    title: 'Product Analyst',
    years: '2017 - 2019',
    highlights: [
      'Built data-driven product insights dashboard',
      'Supported mortgage platform modernization',
      'Collaborated with engineering and design teams'
    ]
  },
  {
    name: 'UT Austin McCombs',
    shortName: 'McCombs',
    brandColor: '#BF5700', // UT Burnt Orange
    type: 'education',
    logo: '/images/logos/4_RGB_McCombs_School_Brand_Formal.png',
    title: 'MBA, Technology & Innovation',
    years: '2015 - 2017',
    highlights: [
      'Graduate Business Council member',
      'Product Management specialization',
      'Entrepreneurship certificate'
    ]
  }
];
---

<div class={`trusted-by ${className}`}>
  <p class="trusted-by-label">
    <span class="label-text">Previously</span>
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="4"></circle>
      <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path>
    </svg>
  </p>
  <div class="trusted-logos">
    {organizations.map((org, index) => (
      <div 
        class="trusted-logo" 
        style={`--brand-color: ${org.brandColor}`}
        data-org={org.type}
        data-last={index === organizations.length - 1 ? 'true' : 'false'}
      >
        <img
          src={org.logo}
          alt={`${org.name} logo`}
          loading="lazy"
          decoding="async"
        />
        <div class="logo-tooltip">
          <h4 class="tooltip-org">{org.name}</h4>
          <p class="tooltip-title">{org.title}</p>
          <p class="tooltip-years">{org.years}</p>
          <ul class="tooltip-highlights">
            {org.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .trusted-by {
    text-align: left;
    margin-top: var(--space-md);
  }

  .trusted-by-label {
    display: flex;
    align-items: center;
    gap: 0.35em;
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-xs) 0;
    padding-left: 2px;
  }

  .label-text {
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    opacity: 0.7;
  }

  .trusted-by-label svg {
    width: 14px;
    height: 14px;
    color: var(--color-accent);
    opacity: 0.85;
    flex-shrink: 0;
  }

  .trusted-logos {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: clamp(var(--space-xs), 2vw, var(--space-md));
    margin-top: var(--space-sm);
    margin-inline: 0;
    width: 100%;
    flex-wrap: wrap;
    padding: 0;
  }

  .trusted-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: clamp(80px, 14vw, 120px);
    min-width: 80px;
    height: clamp(40px, 6vw, 52px);
    padding: var(--space-3xs) var(--space-2xs);
    border-radius: var(--radius-md);
    background-color: transparent;
    border: 1px solid color-mix(in srgb, var(--brand-color) 30%, transparent 70%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: visible;
    box-shadow: 0 12px 32px rgba(17, 34, 21, 0.08);
    flex-shrink: 0;
    cursor: pointer;
  }

  .trusted-logo::before {
    display: none;
  }

  .trusted-logo:hover {
    transform: translateY(-3px);
    border-color: var(--brand-color);
    box-shadow: 
      0 18px 36px rgba(17, 34, 21, 0.16),
      0 6px 12px rgba(17, 34, 21, 0.12);
  }

  .trusted-logo img {
    width: clamp(56px, 7vw, 88px);
    max-height: clamp(22px, 5vw, 28px);
    height: auto;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.12));
    transition: transform 0.3s ease;
    object-fit: contain;
    mix-blend-mode: multiply;
  }

  .trusted-logo:hover img {
    transform: scale(1.04);
  }

  /* Tooltip */
  .logo-tooltip {
    position: absolute;
    bottom: 100%;
    left: 0;
    transform: translateY(-8px);
    background: rgba(17, 34, 21, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(79, 124, 99, 0.3);
    border-radius: var(--radius-md);
    padding: var(--space-sm) var(--space-md);
    min-width: 280px;
    max-width: 320px;
    box-shadow: 
      0 12px 32px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 100;
  }

  .trusted-logo:hover .logo-tooltip {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .logo-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: var(--space-md);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid rgba(17, 34, 21, 0.98);
  }

  /* Right-align tooltip for last logo to prevent cutoff */
  .trusted-logo[data-last="true"] .logo-tooltip {
    left: auto;
    right: 0;
  }

  .trusted-logo[data-last="true"] .logo-tooltip::after {
    left: auto;
    right: var(--space-md);
  }

  .tooltip-org {
    margin: 0 0 var(--space-3xs) 0;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    color: #ffffff;
    letter-spacing: -0.01em;
  }

  .tooltip-title {
    margin: 0 0 var(--space-4xs) 0;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
  }

  .tooltip-years {
    margin: 0 0 var(--space-xs) 0;
    font-size: var(--font-size-xs);
    color: rgba(255, 255, 255, 0.7);
    font-weight: var(--font-weight-medium);
  }

  .tooltip-highlights {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .tooltip-highlights li {
    position: relative;
    padding-left: var(--space-sm);
    margin-bottom: var(--space-3xs);
    font-size: var(--font-size-xs);
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.85);
  }

  .tooltip-highlights li:last-child {
    margin-bottom: 0;
  }

  .tooltip-highlights li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  /* Fannie Mae logo sizing */
  .trusted-logo img[alt="Fannie Mae logo"] {
    width: clamp(88px, 10vw, 120px);
    max-height: clamp(36px, 7vw, 40px);
  }

  /* Organization-specific styling */
  .trusted-logo[data-org="education"] {
    /* McCombs uses solid border like others now */
  }

  @media (prefers-color-scheme: dark) {
    .trusted-logo {
      background-color: rgba(17, 34, 21, 0.45);
      border-color: rgba(255, 255, 255, 0.14);
    }
    
    .trusted-logo:hover {
      box-shadow: 
        0 18px 36px rgba(0, 0, 0, 0.35),
        0 6px 16px rgba(0, 0, 0, 0.25);
    }
  }

  @media (max-width: 768px) {
    .trusted-logos {
      gap: var(--space-md);
    }
    
    .trusted-logo {
      min-width: 70px;
      height: 44px;
      padding: var(--space-3xs) var(--space-xs);
    }
  }

  @media (max-width: 520px) {
    .trusted-logos {
      gap: var(--space-sm);
    }
    
    .trusted-logo {
      min-width: 60px;
      height: 40px;
      padding: var(--space-4xs) var(--space-2xs);
    }
  }
</style>